<%= link_to 'Back', pins_path %>

<div class="row">
  <div class="row2 center">
    <div class="panel panel-info">
    <div class="panel-heading center">
      <%= image_tag @pin.image.url(:large), class: "img-responsive" %>
    </div>
    <div class="panel-body center">
    <p><%= @pin.description %></p>
    <p><strong><%= @pin.user.name if @pin.user %></strong></p>


    <p><%= image_tag(pin.user.image) %></p>


    <% if @pin.user == current_user %>
      <%= link_to edit_pin_path(@pin) do %>
        <span class="glyphicon glyphicon-edit"></span>
        Edit
      <% end %>
    <% end %>
    </div>
  </div>


<% $pin = @pin.id %>
<div class="fb-comments" data-href="https://rememberch.herokuapp.com?pin=<%= $pin %>" data-width="500" data-numposts="5"></div>



</div>




